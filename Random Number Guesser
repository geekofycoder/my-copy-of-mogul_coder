#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    int number, guess, guessno = 1;
    srand(time(0));
    number = rand() % 100 + 1;
    // printf("%d\n", number);

    do
    {
        printf("Enter a Guess:\n");
        scanf("%d", &guess);
        if (guess > number)
        {
            printf("Lower Number Please!\n");
        }
        else if (guess < number)
        {
            printf("Higher Number Please!\n");
        }
        else
        {
            printf("Correct guess!and you did it in %d attempts!", guessno);
        }
        guessno++;
    } while (guess != number);

    return 0;
}
